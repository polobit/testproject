<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>AnalyticsServlet</servlet-name>
		<servlet-class>com.agilecrm.web.stats.StatsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AnalyticsServlet</servlet-name>
		<url-pattern>/stats</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddAnalyticsServlet</servlet-name>
		<servlet-class>com.agilecrm.web.stats.AddStatsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddAnalyticsServlet</servlet-name>
		<url-pattern>/addstats</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SegmentationServlet</servlet-name>
		<servlet-class>com.agilecrm.visitor.segmentation.SegmentationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SegmentationServlet</servlet-name>
		<url-pattern>/visitors</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ReportsServlet</servlet-name>
		<servlet-class>com.agilecrm.web.stats.ReportsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ReportsServlet</servlet-name>
		<url-pattern>/reports</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>StatsServerApiServlet</servlet-name>
		<servlet-class>com.agilecrm.web.stats.StatsServerApiServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StatsServerApiServlet</servlet-name>
		<url-pattern>/api</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>com.agilecrm.web.stats.OfyHelper</listener-class>
	</listener>
</web-app>

{{#if id}}
<!-- contact exist -->			
		<div class="contact-minified row-fluid">
			<div style="max-width:95%; display:inline-block;">
				<div style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;margin-left: 11px;">
					<a class="gadget-show-contact display-toggle" style="cursor:pointer; margin:0px 10px 0px 0px; text-decoration:underline; font-weight:bold;"><i class="fa fa-plus-square toggle-tag" style="text-decoration:none; margin-right:5px;margin-top: 2px;"></i></a><span title="{{getPropertyValue properties "first_name"}} {{getPropertyValue properties "last_name"}} ({{email}})" style="cursor:default;">
					<font style=" font-weight: 600;margin-left: -10px;">
					{{getPropertyValue properties "first_name"}} {{getPropertyValue properties "last_name"}}
					</font>({{email}}) </span>
				</div>
			</div>
		</div>

		<div class="row-fluid show-contact-summary" style="display:none;margin-top: -13px; margin-left: 31px;"> 
  			
		</div>

   		<div class="option-tabs row-fluid" style="display:none;margin-left: 11px;">

		</div>
	{{else}}
<!--contact not exist, add contact -->
		<div class="agile-no-contact row-fluid">	
			<div class="contact-list-width" style="max-width:75%; display:inline-block;">
				<div style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden; margin-left: 12px;margin-bottom: 5px;">
					{{#if fname}}
						<a class="gadget-add-contact" style="cursor:pointer; text-decoration:none; font-weight:bold;"><i class="fa fa-plus" id="contact-hide-show" style="text-decoration:none; margin-right:5px;"></i></a><span title="{{fname}} {{lname}} ({{email}})" style="cursor:default;"> {{fname}} {{lname}} ({{email}})</span> <span style="margin-left:10px;color: rgb(205, 92, 92);">Contact does not exist</span></span>
					{{else}}
						<a class="gadget-add-contact" style="cursor:pointer; text-decoration:none; font-weight:bold;"><i class="fa fa-plus" id="contact-hide-show" style="text-decoration:none; margin-right:5px;"></i></a><span title="{{email}}" style="cursor:default;"> {{email}} <span style="margin-left:10px;color: rgb(205, 92, 92);">Contact does not exist</span></span>
					{{/if}}
				</div>
			</div>
			<p class="contact-search-status" style="color:indianred; margin-left:15px; position:absolute;">Contact does not exist</p>
		</div>
      	<div class="show-add-contact-form row-fluid" style="display:none;">
			
		</div>
	{{/if}}